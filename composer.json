{
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "woocommerce/woocommerce-sniffs": "^1.0",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=./pbs-rules-set.xml --extensions=php,phtml,js,html --warning-severity=0 --ignore-annotations --colors .",
    "lint-fix": "./vendor/bin/phpcbf --standard=./pbs-rules-set.xml --extensions=php,phtml,js,html --colors ."
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
