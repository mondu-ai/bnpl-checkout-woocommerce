{
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "woocommerce/woocommerce-sniffs": "^0.1.3"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs --standard=./pbs-rules-set.xml --extensions=php,phtml,js,html --warning-severity=0 --ignore-annotations .",
        "lint-fix": "./vendor/bin/phpcbf --standard=./pbs-rules-set.xml --extensions=php,phtml,js,html ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
